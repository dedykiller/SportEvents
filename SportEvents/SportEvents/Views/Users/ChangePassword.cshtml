@model SportEvents.Models.User

@{
    ViewBag.Title = "ChangePassword";
}

@Html.ActionLink(@SportEvents.Languages.Resources.changedPassword, "Index", "Groups", null, new { @class = "return" })

<hr />
<p class="button-link">
    @Html.ActionLink(@SportEvents.Languages.Resources.changeCredential, "EditAccount")
</p>
<p class="button-link">
    @Html.ActionLink(@SportEvents.Languages.Resources.changePassword, "ChangePassword")
</p>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)


            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PasswordComparison, htmlAttributes: new { @class = "label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PasswordComparison, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PasswordComparison, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@SportEvents.Languages.Resources.save" class="button" />
                </div>
            </div>
        </div>
    }
</body>
</html>

