@model SportEvents.Models.User

@{
    ViewBag.Title = "ChangePassword";
}

@Html.ActionLink("Změna Hesla", "Index", "Groups", null, new { @class = "return" })

<hr />
<p class="button-link">
    @Html.ActionLink("Změnit údaje", "EditAccount")
</p>
<p class="button-link">
    @Html.ActionLink("Změnit heslo", "ChangePassword")
</p>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

 
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PasswordComparison, htmlAttributes: new { @class = "label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PasswordComparison, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PasswordComparison, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Uložit" class="button" />
            </div>
        </div>
    </div>
}


