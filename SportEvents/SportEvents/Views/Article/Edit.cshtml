@model SportEvents.Models.Article

@{
    ViewBag.Title = "Edit";
}

<a class="return" onclick="history.back()">
    Editace článku: @Model.Title
</a>
<hr />
@using (Html.BeginForm("Edit", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.GroupID)
        @Html.HiddenFor(model => model.Picture)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, "Titulek", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="form-group">
            @Html.TextAreaFor(model => model.Body, 20, 50, new { @class = "form-control col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Body)
            </div>
        </div>

        <div>
            <input type="file" name="uploadFile" /><br />
            <img src="@Url.Content(Model.Picture)" alt="images" width="309px">
            @Html.ValidationMessage("uploadFile")
        </div>

                <input type="submit" name="Submit" value="Ulož změny" class="button" />
 
     
    </div>
}
