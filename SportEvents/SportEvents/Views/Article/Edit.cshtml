@model SportEvents.Models.Article

@{
    ViewBag.Title = "Edit";
}

<h3>Editace článku @Model.Title</h3>

@using (Html.BeginForm("Edit", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.GroupID)
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Title, new { cols = 80, rows = 1, @class = "form-control col-md-2" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Body, new { cols = 100, rows = 20, @class = "form-control col-md-2" })
                @Html.ValidationMessageFor(model => model.Body)
            </div>
        </div>

        <div class="col-md-10">
            <input type="file" name="uploadFile" />
            @Html.ValidationMessage("uploadFile")
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="Submit" value="Ulož změny" class="button-link" />
            </div>
        </div>
    </div>
}

<div class="button-link">
    @Html.ActionLink("Back to List", "Index")
</div>
