@model SportEvents.Models.Article

@{
    ViewBag.Title = "Vytvoř nový článek";
}

<h3>Vytvoř nový článek</h3>

@using (Html.BeginForm("Create", "Article", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.GroupID)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, "Titulek",  new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.TextAreaFor(model => model.Body, 20, 50, new { @class = "form-control col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Body)
            </div>
        </div>
        
        <div class="col-md-10">
            <input type="file" name="UploadedFile" />
        </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="Submit" value="Vytvoř nový článek" class="btn btn-default" />
                </div>
            </div>

        </div>
}

<div class="button-link">
    @Html.ActionLink("Back to List", "Index")
</div>
