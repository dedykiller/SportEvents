@model SportEvents.ViewModels.PaymentPeriodCollectionVM

@{
    ViewBag.Title = "Seznam zúčtovacích období";
}

<a class="return" onclick="history.back()">
    Seznam zúčtovacích období
</a>
<hr />

    <section id="left">
        <table class="table">
            <tr>
                <th>
                    <h3>Seznam zúčtovacích období</h3>
                </th>
                <th>
                    
                </th>
                <th>

                </th>
                <th>

                </th>


            </tr>
            @foreach (var item in Model.PaymentPeriods)
            {
                <tr onclick="location.href = '@(Url.Action("ListOfPayments", "PaymentPeriod", new { PaymentPeriodId = item.Id, groupId = item.GroupId }))'">
                    <td>
                        @Html.DisplayFor(modelItem => item.Start)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.End)
                    </td>

                </tr>
            }
        </table>


        <p class="button-link-first">
            @Html.ActionLink("Nové zúčtovací období", "CreateNextPaymentPeriod", "PaymentPeriod", new { groupId = Model.PaymentPeriods.First().GroupId }, null)
        </p>

        <p class="button-link-first">
            @Html.ActionLink("Edituj aktuální zúčtovací období", "Edit", "PaymentPeriod", new { groupId = Model.PaymentPeriods.First().GroupId }, null)
        </p>
    </section>
