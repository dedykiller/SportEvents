@model SportEvents.Models.Group

@{
    ViewBag.Title = "Create";
}
<a class="return" onclick="history.back()">
    @SportEvents.Languages.Resources.newGroup
</a>

<hr />
<link rel="stylesheet" type="text/css" href="~/Content/jquery.datetimepicker.css" />
<script src="~/Scripts/jquery.js"> </script>
<script src="~/Scripts/jquery.datetimepicker.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="form-group">
            @SportEvents.Languages.Resources.fillGroupName
            <div>
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @SportEvents.Languages.Resources.enterDescripGroup
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, 20, 50, new { @class = "form-control col-md-2" })
                @Html.ValidationMessageFor(model => model.Description)

            </div>
        </div>

        <div class="form-group">
            @SportEvents.Languages.Resources.endPayPeriod
            <div class="col-md-10">
                <input id="datetimepicker" type="text" name="EndOfPaymentPeriod" />
                <script>
 jQuery('#datetimepicker').datetimepicker({
     format: 'd.m.Y',
     lang: 'cs',
     minDate: '-1969/12/31',
     timepicker: false
 }); </script>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@SportEvents.Languages.Resources.create" class="button" />
            </div>
        </div>
    </div>
}


